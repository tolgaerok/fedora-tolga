GRUB_CMDLINE_LINUX_DEFAULT="quiet splash zswap.enabled=1 zswap.compressor=lz4 zswap.max_pool_percent=10 zswap.zpool=zsmalloc io_delay=none rootdelay=0 threadirqs irqaffinity=0 noirqdebug iomem=relaxed workqueue.power_efficient=1 noatime pci=pcie_bus_perf,noaer"

